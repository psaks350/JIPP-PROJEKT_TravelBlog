<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TravelBlog</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">
</head>
<body>
    <nav class="navigation-menu">
            <header class="navigation-header">
                <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/logo.png" alt="logo"></a>
                <input id="menu-toggle" type="checkbox" />
                <label class='navigation-button-container' for="menu-toggle">
                    <div class='navigation-menu-button'></div>
                </label>
                <ul class="menu-box">
                    <li class="dot"><img src="~/img/dot.png" alt="dot"></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Aktualnosci">aktualności</a></li>
                    <li class="dot"><img src="~/img/dot.png" alt="dot"></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Omnie">o mnie</a></li>
                    <li class="dot"><img src="~/img/dot.png" alt="dot"></li>
                    <li><a asp-area="" asp-controller="CMS" asp-action="Galeria">galeria</a></li>
                    <li class="dot"><img src="~/img/dot.png" alt="dot"></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Kontakt">kontakt</a></li>
                    <li class="dot"><img src="~/img/dot.png" alt="dot"></li>
                </ul>
            </header>
    </nav>
    <section">
        <main role="main" class="pb-3" >
            @RenderBody()
        </main>
    </section>

    <footer id="contact">
        <div class="contact-and-social-media">
            <a href="mailto:piotr@theadventurerblog.pl" class="e-mail"></a>
            <a href="#" class="facebook"></a>
            <a href="#" class="twitter"></a>
            <a href="#" class="gplus"></a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
