@model TravelBlog.Models.GalleryItemModel

@{
    ViewData["Title"] = "Edit";
}
<div class="GalleryItemModel">
    <h1 class="gallery-title">Edytuj</h1>
    <hr />
    <div class="GalleryItemModel-item">
        <div class="container text-center">
            <div class="row">
                <div class="col">
                    <img src="@Html.DisplayFor(model => model.ImagePath)" alt="bay" />
                </div>
                <div class="col">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="ImagePath" class="control-label">Ścieżka do pliku</label>
                            <input asp-for="ImagePath" class="form-control" />
                            <span asp-validation-for="ImagePath" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ImageDescription" class="control-label">Opis zdjęcia</label>
                            <input asp-for="ImageDescription" class="form-control" />
                            <span asp-validation-for="ImageDescription" class="text-danger"></span>
                        </div>
                        <div class="remove-form">
                            <input type="submit" value="Zapisz" class="btn btn-success" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="gallery-button">
        <a asp-action="Galeria" class="btn btn-secondary">Powrót do galerii</a>
    </div>
</div>
