@model TravelBlog.Models.EmailModel

@{
    ViewData["Title"] = "Kontakt";
}

<section class="kontakt">
   
            <form asp-action="Kontakt" class="kontakt-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input_box">
                    <input asp-for="Email" placeholder="Email" name="Email" class="input_box_mail" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="input_box">
                    <input asp-for="Imie" placeholder="Imię" name="Imie" />
                    <span asp-validation-for="Imie" class="text-danger"></span>
                </div>
                <div class="input_box">
                    <input asp-for="Nazwisko" placeholder="Nazwisko" name="Nazwisko" />
                    <span asp-validation-for="Nazwisko" class="text-danger"></span>
                </div>
                <div class="input_box">
                    <input asp-for="Opis" placeholder="Opis" name="Opis" />
                    <span asp-validation-for="Opis" class="text-danger"></span>
                </div>
                <div>
                    <input type="submit" value="Wyślij" class="form-button" />
                </div>
            </form>
</section>

